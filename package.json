{
  "name": "cep-api",
  "version": "1.0.0",
  "description": "API to search CEP",
  "main": "lib/index.js",
  "private": true,
  "scripts": {
    "build": "yarn build:types && yarn build:js",
    "build:types": "tsc --emitDeclarationOnly",
    "build:js": "babel src --out-dir lib --extensions \".ts,.tsx\" --source-maps inline",
    "test": "mocha -r ts-node/register tests/**/*.test.ts",
    "test:coverage": "nyc -r lcov -e .ts -x \"*.test.ts\" npm run test",
    "start": "nodemon",
    "start:babel": "babel-node --extensions \".ts,.tsx\" src/index.ts",
    "type-check": "tsc --noEmit",
    "type-check:watch": "yarn type-check --watch",
    "tslint": "tslint 'src/**/*.ts'",
    "pretslint": "yarn type-check",
    "tslint:fix": "tslint --fix 'src/**/*.ts'"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged",
      "pre-push": "yarn test"
    }
  },
  "resolutions": {
    "babel-core": "^7.0.0-bridge.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.3",
    "@babel/core": "^7.8.3",
    "@babel/node": "^7.0.0",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/plugin-proposal-object-rest-spread": "^7.0.0",
    "@babel/plugin-transform-regenerator": "^7.0.0",
    "@babel/preset-env": "^7.8.3",
    "@babel/preset-typescript": "^7.8.3",
    "@types/axios": "^0.14.0",
    "@types/chai": "^4.2.10",
    "@types/express": "^4.16.0",
    "@types/express-validator": "^3.0.0",
    "@types/mocha": "^7.0.2",
    "@types/mongodb": "^3.5.16",
    "@types/mongoose": "^5.7.16",
    "@types/morgan": "^1.7.35",
    "@types/node": "^10.11.7",
    "@types/supertest": "^2.0.9",
    "babel-core": "^6.26.3",
    "babel-polyfill": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "husky": "^4.2.5",
    "mocha": "^7.1.0",
    "morgan": "^1.9.1",
    "nodemon": "^1.18.4",
    "nyc": "^15.0.0",
    "prettier": "^1.14.3",
    "pretty-quick": "^1.7.0",
    "supertest": "^4.0.2",
    "ts-node": "^8.6.2",
    "tslint": "^5.11.0",
    "tslint-config-airbnb": "^5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "typescript": "^3.7.5"
  },
  "dependencies": {
    "@babel/polyfill": "^7.0.0",
    "@types/cors": "^2.8.6",
    "axios": "^0.19.2",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.16.4",
    "express-validator": "^6.4.0",
    "mongodb": "^3.5.7",
    "mongoose": "^5.9.13"
  }
}
